{
  "extends": ["conventions"],
  "plugins": ["import", "unicorn"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "env": {
    "node": true
  },
  "rules": {
    "import/extensions": ["error", "always"],
    "unicorn/prevent-abbreviations": "error",
    "unicorn/prefer-node-protocol": "error"
  }
}
