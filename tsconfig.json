{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["ESNext"],
    "moduleResolution": "NodeNext",
    "outDir": "./build",
    "rootDir": "./cli",
    "noEmit": true,
    "checkJs": false,
    "exactOptionalPropertyTypes": false
  },
  "exclude": ["node_modules", "challenges", "templates", "temp", "tmp"]
}
