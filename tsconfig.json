  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./cli",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true
