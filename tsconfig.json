{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "allowJs": false,
    "checkJs": false,
    "declaration": false,
    "sourceMap": false,
    "outDir": "./build",
    "rootDir": "./cli",
    "removeComments": true,
    "noEmitOnError": true,
    "importHelpers": false,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "challenges", "templates"]
}
